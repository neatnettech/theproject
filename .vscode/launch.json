    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to FastAPI (debugpy)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}/apps/staging-api/staging",
                "remoteRoot": "${workspaceFolder}/apps/staging-api/staging"
              }
            ]
          }
    ]
}